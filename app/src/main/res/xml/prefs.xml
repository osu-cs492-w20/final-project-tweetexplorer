<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="@string/pref_temp_key"
        android:title="@string/pref_temp_title"
        android:summary="%s"
        android:dialogTitle="@string/pref_temp_title"
        android:entries="@array/pref_temp_entries"
        android:entryValues="@array/pref_temp_values"
        android:defaultValue="@string/pref_temp_default"/>

    <EditTextPreference
        android:key="@string/pref_location_key"
        android:title="@string/pref_location_title"
        android:defaultValue="@string/pref_location_default"/>

</PreferenceScreen>